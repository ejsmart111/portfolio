<html>

<head>
    <title>Egbe Jeremiah- Blog</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Maven+Pro:wght@400;500&family=Raleway:ital,wght@0,400;0,500;0,600;1,400&family=Roboto&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/solid.min.css"
        integrity="sha512-SazV6tF6Ko4GxhyIZpKoXiKYndqzh7+cqxl9HDH7DGSpjkCN3QLqTAlhJHJnKxu3/2rfCsltzwFC4CmxZE1hPg=="
        crossorigin="anonymous" />
    <link href="/assets/style.css" rel="stylesheet" type="text/css" />
    <style>
        .image {
            width: 100%;
            border-radius: 3px 3px 0 0;
            height: 200px;
            object-fit: cover;
            border: 1px solid rgb(230, 230, 230)
        }
        .sss:hover img {
            transform: scale(1.08);
        }

        .card {
            border-radius: 10px !important;
        }
        a {
            color: #0f131f
        }
        a:hover {
            color: #f10404;
            text-decoration: none;
        }

        .center {
            max-width: 800px;
        }
    </style>
</head>

<body>
    <%-include('partials/nav')-%>
    <div class="container center"><br><br>
        <h2 class="text-center">BLOG</h2>
        <hr style="border:1px solid #E2364D; width:40px"/><br><br>
        <div class="row">
            <% blogs.forEach((blog) => {%>
                <div class="col-md-4">
                    <div class="sss" style="margin-bottom:30px">
                        <img src="<%=blog.image.substring(7)%>" class="image-fluid image"/>
                        <div class="mt-3">
                            <h5 class="card-title"><a href="/blog/<%=blog.id%>"><%=blog.title%></a></h5>
                            <small style="color: #E2364D"><%= blog.date.toUTCString() %></small><br>
                            <p style="margin-top: 10px;font-size: 13px;"><%= Math.ceil(blog.body.split(" ").length/200) %> minute(s) read</p>
                            <!-- <span class="card-text"><%-blog.body.substring(0,200)-%>...</span> -->
                        </div>
                    </div>
                </div>
            <%})%>
        </div>
    </div>

    <script type="text/javascript" src="/assets/simditor/site/assets/scripts/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/ff2ffd9765.js"></script>
    <script>
        $(document).ready(() => {
            
        })
    </script>
</body>

</html>